{
  "name": "fk-element-monorepo",
  "version": "1.0.0",
  "description": "FK-Element 组件库 monorepo 项目",
  "type": "module",
  "author": "frank Mood",
  "license": "MIT",
  "keywords": [
    "Vue3",
    "component",
    "library",
    "monorepo"
  ],
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky init",
    "build:components": "pnpm --filter @xuqizhang/fk-element build",
    "dev:playground": "pnpm --filter playground dev",
    "publish:components": "pnpm --filter @xuqizhang/fk-element publish",
    "lint:es": "eslint packages/**/*.{vue,ts}",
    "lint:style": "stylelint packages/**/*.vue",
    "spellcheck": "cspell lint --dot --cache --gitignore --color --show-suggestions \"packages/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md|vue)\"",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.7.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.10.1",
    "@vue/tsconfig": "^0.8.1",
    "commitizen": "4.3.1",
    "commitlint": "20.2.0",
    "cspell": "9.4.0",
    "cz-git": "1.12.0",
    "eslint": "9.7.0",
    "eslint-plugin-simple-import-sort": "12.1.0",
    "eslint-plugin-vue": "9.27.0",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "postcss-nested": "^7.0.2",
    "postcss-scss": "^4.0.9",
    "postcss-styled-syntax": "^0.7.1",
    "sass": "^1.95.1",
    "stylelint": "16.23.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended": "17.0.0",
    "stylelint-config-recommended-scss": "^16.0.2",
    "stylelint-config-recommended-vue": "1.5.0",
    "stylelint-scss": "^6.13.0",
    "typescript": "5.9.3",
    "typescript-eslint": "7.16.0",
    "vue-tsc": "3.1.4"
  }
}
